<script>
	let c=0;
	document.querySelector('.btn').addEventListener('click',function(){
		
		var name = document.querySelector('#name').value;
		if(name == "101"){
			fetch('/insert/3',{
				method:'POST',
				headers:{
					'Content-Type':'application/json'
				},
				body:JSON.stringify({
					score:200
				})
			})
			window.location.href = "/final";
		}
		else{
			if(c==0){
				c++;
				alert("Hint:Spend some time on each page");
			}else if(c==1){
				c++;
				alert("See you later..Better Luck next time");
				c=0;
			window.location.href = "/";
			}
			
		}
	})
</script>
