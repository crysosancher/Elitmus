		var name = document.querySelector('#name').value;
		if(name == "8"){
			await fetch('/insert/2',{
				method:'POST',
				headers:{
					'Content-Type':'application/json'
				},
				body:JSON.stringify({
					score:100
				})
			})
			window.location.href = "/3";
		}
		else{
			alert("Wrong answer");
			window.location.href = "/";
		}
	})
</script>
